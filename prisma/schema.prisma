generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum SkType {
  SKIK
  SKTM
  SKMS
  SKCK
  SKU
  SKK
  SKD
  SKDI
  SKPB
  SKKM
  SKHIL
}

enum SkStatus {
  VERIFY
  DONE
}

model user {
  id                  String         @id @default(uuid())
  name                String
  email               String
  role                String
  password            String
  refresh_tokens      refresh_token[]
  certificate         certificate[]
}

model refresh_token {
  user                user            @relation(fields: [userId], references: [id])
  userId              String
  id                  String          @id @default(uuid())
  token               String
}

model certificate {
  user                user            @relation(fields: [userId], references: [id])
  userId              String
  id                  Int             @id @default(autoincrement())
  skStatus            SkStatus
  skType              SkType
  skData              Json
  requestDate         DateTime        @default(now())
  updatedDate         DateTime?
  approvedDate        DateTime?
}
