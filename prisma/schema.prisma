generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum SkType {
  SKIK
  SKTM
  SKMS
  SKCK
  SKU
  SKK
  SKD
  SKDI
  SKPB
  SKKM
  SKHIL
}

enum SkStatus {
  VERIFY
  DONE
}

enum UserRole {
  USER
  ADMIN
}

model user {
  id                  String         @id @default(uuid())
  email               String         @unique
  role                UserRole
  password            String
  profile             profile?
  refresh_tokens      refresh_token[]
  certificate         certificate[]
}

model profile {
  user                user            @relation(fields: [userId], references: [id])
  userId              String          @unique
  id                  String          @id @default(uuid())
  name                String?
  nik                 String?
  alamat              String?
  ktp                 String?
  tempatLahir         String?
  tanggalLahir        DateTime?
}

model refresh_token {
  user                user            @relation(fields: [userId], references: [id])
  userId              String
  id                  String          @id @default(uuid())
  token               String
}

model certificate {
  user                user            @relation(fields: [userId], references: [id])
  userId              String
  id                  Int             @id @default(autoincrement())
  skStatus            SkStatus
  skType              SkType
  skData              Json
  requestDate         DateTime        @default(now())
  updatedDate         DateTime?
  approvedDate        DateTime?
}
